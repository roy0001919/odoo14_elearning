                <p>Transfer information will be provided after choosing the payment method.</p>]]>
            </field>
            <field name="easystore_shop_num">dummy</field>
            <field name="easystore_client_name">dummy</field>
            <field name="easystore_test_key_one">dummy</field>
            <field name="easystore_test_key_two">dummy</field>
            <field name="easystore_test_key_thr">dummy</field>
            <field name="easystore_prod_key_one">dummy</field>
            <field name="easystore_prod_key_two">dummy</field>
            <field name="easystore_prod_key_thr">dummy</field>
        </record>
